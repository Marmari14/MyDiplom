<Window x:Class="Vers0.ViewModel.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vers0.ViewModel"
        mc:Ignorable="d"
         Title="ООО СтарТрек" Height="350" Width="450" ResizeMode="NoResize" Background="#FFD2D2D2">
    <Grid Height="350"  Width="450">

        <Label Content="Вход" HorizontalAlignment="Center" Margin="20" FontSize="36" ></Label>
        <TextBox Name="login" HorizontalAlignment="Center" Width="250"  FontSize="15" Height="30" Margin="0,125,0,195" Padding="0 3 0 0" MaxLength="20"></TextBox>
        <PasswordBox Name="password" HorizontalAlignment="Center" Width="250"  FontSize="15" Height="30" Margin="0,170,0,150" Padding="0 3 0 0"  MaxLength="20"></PasswordBox>
        <Button Name="logIn" HorizontalAlignment="Center" Content="Войти" Width="130" Height="40" FontSize="16"  Margin="0,220,0,90" Command="{Binding LogInCommand}"></Button>
        <Label Content="Логин" HorizontalAlignment="Left" FontSize="16" Margin="30,125,0,195"></Label>
        <Label Content="Пароль" HorizontalAlignment="Left" FontSize="16" Margin="30,170,0,150"></Label>

    </Grid>
</Window>
